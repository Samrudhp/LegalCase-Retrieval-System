# Environment Variables for Legal Case Analysis System

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=legal_case_analysis
MONGODB_COLLECTION_CASES=cases
MONGODB_COLLECTION_CHAT_HISTORY=chat_history

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss_index/legal_cases.index
FAISS_DIMENSION=768

# Model Configuration
EMBEDDING_MODEL=nlpaueb/legal-bert-small-uncased
SPACY_MODEL=en_core_web_sm

# File Paths
DATA_DIR=./data
CASES_DIR=./data/cases
LOGS_DIR=./logs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Processing Configuration
BATCH_SIZE=100
MAX_WORKERS=4
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
SECRET_KEY=your_secret_key_here
GDPR_COMPLIANCE=true
ANONYMIZE_DATA=true
